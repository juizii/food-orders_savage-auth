</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1>Ordering Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
  
                    

        <div class="col-sm-6">
            <h2>What dish would you like?</h2>
            <div class = "inputs"></dic>
                <h2></h2>
                <% if (user.local.email) { %>
                    <form action="/messages" method="POST">
                        <input type="text" value="<%= user.local.email %>" name="name">
                        <input type="text" placeholder="item" name="orders" required>
                        <button type="submit">Submit</button>
                    </form>
                <% } %>
            </div>

    <h3>Orders</h3>
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Orders</th>
                <th>Completed</th>
                <th></th>
                <th></th>
                <th>Delete?</th>
                
            </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<messages.length; i++) {%>
                <tr class="message">
                    <td><%= i+1 %></td>
                    <td><%= messages[i].name %></td>
                    <td><%= messages[i].orders %></td>
                    <td><%= messages[i].completed %></td>
                    <td> <span class ="yes">COMPLETE</span></td>
                    <td> <span class ="no">PEND</span></td>
                    <td><i class="fa-solid fa-dumpster-fire" aria-hidden="true"></i></td>
                </tr>
            <% } %>
        </tbody>
    </table>

</div>
